@model Hobby
<form asp-action="Create" asp-controller="Hobbies" method="post">
    <h2>Add a hobby</h2>
    
    <div class="form-group">
        <span asp-validation-for="HobbyName"></span>
        <label asp-for="HobbyName"></label>
        <input class="form-control" asp-for="HobbyName">
    </div>
    <div class="form-group">
        <span asp-validation-for="Description"></span>
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description">
    </div>
   
    <input class="btn btn-primary" type="submit" value="Create">
</form>